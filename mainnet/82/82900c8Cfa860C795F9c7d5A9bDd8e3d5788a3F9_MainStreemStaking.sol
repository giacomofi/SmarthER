// SPDX-License-Identifier: <SPDX-License>
contract MainStreemStaking is Ownable {
    using SafeMath for uint256;
    using SafeTRC20 for IERC20;

    /* ========== STATE VARIABLES ========== */

    IERC20 public MainStreemToken;

    uint256 public _totalSupply;
    uint256 public _totalTokenSupply;
    address public teamWallet;
    uint256 public depositFee = 0;
    uint256 public withdrawFee = 0;
    address public operator;
    mapping(address => uint256) public _depositedAmount;
    mapping(address => uint16) public deposited;
    address[] public stakers;
    uint256 public APR = 600;
    uint256 lastHarvestTime = block.timestamp;

    /* ========== CONSTRUCTOR ========== */

    constructor(address _MainStreemToken, address _teamWallet) {
        MainStreemToken = IERC20(_MainStreemToken);
        MainStreemToken.safeApprove(address(this), uint256(-1));
        teamWallet = _teamWallet;
        operator = msg.sender;
    }

    /* ========== VIEWS ========== */

    function totalSupply() external view returns (uint256) {
        return _totalSupply;
    }

    function deposit(uint256 amount) external {
        uint256 addedAmount;

        uint256 contractBalance = MainStreemToken.balanceOf(address(this));
        MainStreemToken.transferFrom(msg.sender, address(this), amount);
        addedAmount =
            MainStreemToken.balanceOf(address(this)) -
            contractBalance;

        uint256 FeeAmount = addedAmount.mul(depositFee).div(1000);
        uint256 stakingAmount = addedAmount.sub(FeeAmount);
        if (FeeAmount > 0) {
            MainStreemToken.transfer(teamWallet, FeeAmount);
        }
        _depositedAmount[msg.sender] = _depositedAmount[msg.sender].add(
            stakingAmount
        );
        _totalTokenSupply = _totalTokenSupply.add(addedAmount);
        _totalSupply = _totalSupply.add(addedAmount);
        if (deposited[msg.sender] == 0) {
            deposited[msg.sender] = 1;
        }
        uint16 registered = 0;
        for (uint256 i = 0; i < stakers.length; i++) {
            if (stakers[i] == msg.sender) {
                registered = 1;
            }
        }
        if (registered == 0) {
            stakers.push(msg.sender);
        }
    }

    function harvest() external {
        require(operator == msg.sender, "Operator can call this function");
        if (block.timestamp > lastHarvestTime + 86400) {
            uint256 rewardAmount;
            for (uint64 i = 0; i < stakers.length; i++) {
                if (_depositedAmount[stakers[i]] > 0) {
                    rewardAmount = _depositedAmount[stakers[i]]
                        .mul(APR)
                        .mul(block.timestamp - lastHarvestTime)
                        .div(31536000000);
                    _depositedAmount[stakers[i]] += rewardAmount;
                }
            }
            lastHarvestTime = block.timestamp;
        }
    }

    function withdraw() external {
        uint256 withdrawAmount = _depositedAmount[msg.sender];
        uint256 FeeAmount = withdrawAmount.mul(withdrawFee).div(1000);
        _totalSupply = _totalSupply.sub(withdrawAmount);
        _totalTokenSupply = _totalTokenSupply.sub(withdrawAmount);
        uint256 userWithdrawAmount = withdrawAmount.sub(FeeAmount);
        if (userWithdrawAmount > 0) {
            MainStreemToken.transfer(msg.sender, userWithdrawAmount);
        }

        deposited[msg.sender] = 0;
        _depositedAmount[msg.sender] = 0;
    }

    function transferOperator(address _operator)
        public
        onlyOwner
        returns (address)
    {
        operator = _operator;
        return operator;
    }

    function setTeamWallet(address _teamWallet)
        public
        onlyOwner
        returns (address)
    {
        teamWallet = _teamWallet;
        return teamWallet;
    }

    function setAPR(uint16 _APR) public onlyOwner {
        APR = _APR;
    }

    function setFeeAmount(uint16 _depositFee, uint16 _withdrawFee)
        public
        onlyOwner
    {
        depositFee = _depositFee;
        withdrawFee = _withdrawFee;
    }

    function depositInfo(address _account, address _stakingAddress)
        external
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        return (
            _depositedAmount[_account],
            _totalTokenSupply,
            MainStreemToken.allowance(_account, _stakingAddress),
            MainStreemToken.balanceOf(_account)
        );
    }


}