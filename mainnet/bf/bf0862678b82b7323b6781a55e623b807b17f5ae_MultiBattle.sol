            escrow.deposit{value: msg.value}(
                msg.sender,
                battleId,
                false,
                address(0),
                0
            );
        } else if (_asset == AssetType.NFT) {
            ERC721 nftContract = ERC721(contractAddr);
            nftContract.safeTransferFrom(
                msg.sender,
                address(this),
                amtOrTokenId
            );
            nftContract.approve(escrowAddr, amtOrTokenId);
            escrow.deposit(
                msg.sender,
                battleId,
                true,
                contractAddr,
                amtOrTokenId
            );
        } else if (_asset == AssetType.TOKEN) {
            ERC20 stakeTokenC = ERC20(contractAddr);
            // transfers token to this contract,
            SafeTransferLib.safeTransferFrom(
                stakeTokenC,
                msg.sender,
                address(this),
                amtOrTokenId
            );
            // approves transfer to escrow
            SafeTransferLib.safeApprove(stakeTokenC, escrowAddr, amtOrTokenId);
            escrow.deposit(
                msg.sender,
                battleId,
                false,
                contractAddr,
                amtOrTokenId
            );
        } else if (_asset == AssetType.NULL) {
            escrow.deposit(msg.sender, battleId, false, address(0), 0);
        }

        emit BattleInitialized(
            battleId,
            msg.sender,
            challenging,
            uint256(_asset),
            contractAddr,
            amtOrTokenId,
            msg.value
        );

        return battleId;
    }

    function joinBattle(
        uint256 battleId,
        bool nft,
        address contractAddr,
        uint256 amtOrTokenId
    ) external payable battleExists(battleId) nonReentrant {
        Battle storage selectedBattle = battles[battleId];
        if (selectedBattle.matched) {
            revert BattleAlreadyMatched();
        } else if (selectedBattle.claimed) {
            revert BattleAlreadyFinished();
        } else if (selectedBattle.two.user != msg.sender) {
            revert NotAllowedParticipant();
        } else {
            AssetType _asset = AssetType.NULL;
            uint256 _amtOrTokenId;

            if (
                msg.value > 0 &&
                contractAddr == address(0) &&
                amtOrTokenId == 0 &&
                !nft
            ) {
                _asset = AssetType.ETH;
                _amtOrTokenId = msg.value;
            } else if (contractAddr != address(0) && amtOrTokenId != 0) {
                if (nft) {
                    _asset = AssetType.NFT;
