contract MultiBattle is ReentrancyGuard, Ownable, ERC721Holder {
    using ECDSA for bytes32;

    enum AssetType {
        NULL,
        ETH,
        TOKEN,
        NFT
    }

    MultiEscrow escrow;
    address public immutable escrowAddr;
    address public judge;
    address public withdrawJudge;

    uint256 public nextBattleId;
    uint256 public withdrawFee;

    event BattleInitialized(
        uint256 indexed battleId,
        address indexed playerOne,
        address indexed playerTwo,
        uint256 assetType,
        address tokenContract,
        uint256 amountOrTokenId,
        uint256 value
    );

    event BattleJoined(
        uint256 indexed battleId,
        address indexed playerOne,
        address indexed playerTwo,
        uint256 assetType,
        address tokenContract,
        uint256 amountOrTokenId,
        uint256 value
    );
    event BattleWon(uint256 indexed battleId, address indexed winner);
    event BattleCanceled(uint256 indexed battleId, address indexed caller);

    struct BattleParticipant {
        address user;
        AssetType asset;
        address contractAddr;
        uint256 amtOrTokenId;
        bool isWinner;
        bool hasWithdrawn;
    }

    struct Battle {
        BattleParticipant one;
        BattleParticipant two;
        bool claimed;
        bool matched;
    }
    mapping(uint256 => Battle) public battles;

    constructor(
        address _owner,
        address _judge,
        address _withdrawJudge
    ) {
        if (
            _owner == address(0) ||
            _judge == address(0) ||
            _withdrawJudge == address(0)
        ) {
            revert ZeroAddressNotAllowed();
        }
        escrow = new MultiEscrow();
        escrowAddr = address(escrow);
        judge = _judge;
        withdrawJudge = _withdrawJudge;
        _transferOwnership(_owner);
    }

    function changeJudge(address _newJudge) external onlyOwner {
        if (_newJudge == address(0)) revert ZeroAddressNotAllowed();
        if (_newJudge == withdrawJudge) revert UniqueJudge();
        judge = _newJudge;
    }

    function changeWithdrawJudge(address _newWithdrawJudge) external onlyOwner {
        if (_newWithdrawJudge == address(0)) revert ZeroAddressNotAllowed();
        if (_newWithdrawJudge == judge) revert UniqueJudge();
        withdrawJudge = _newWithdrawJudge;
    }

    function changeFee(uint256 fee) external onlyOwner {
        withdrawFee = fee;
    }

    function emergencyWithdraw(address payable payee)
        external
        onlyOwner
        nonReentrant
    {
        if (payee == address(0)) {
            revert ZeroAddressNotAllowed();
        }
        uint256 balance = address(this).balance;
        (bool transferTx, ) = payee.call{value: balance}("");
        if (!transferTx) {
            revert TransferFailed();
        }
    }

    function emergencyWithdrawERC20(address payable payee, address token)
        external
        onlyOwner
        nonReentrant
    {
        if (payee == address(0)) {
            revert ZeroAddressNotAllowed();
        }

        ERC20 tokenContract = ERC20(token);
        uint256 balance = tokenContract.balanceOf(address(this));

        SafeTransferLib.safeApprove(tokenContract, payee, balance);
        SafeTransferLib.safeTransfer(tokenContract, payee, balance);
    }

    function emergencyWithdrawERC721(
        address payable payee,
        address nft,
        uint256 tokenId
    ) external onlyOwner nonReentrant {
        if (payee == address(0)) {
            revert ZeroAddressNotAllowed();
        }

        ERC721 nftContract = ERC721(nft);
        nftContract.approve(address(this), tokenId);
        nftContract.safeTransferFrom(address(this), payee, tokenId);
    }

    function emergencyRefund(uint256 battleId)
        external
        battleExists(battleId)
        onlyOwner
        nonReentrant
    {
        Battle storage selectedBattle = battles[battleId];
        if (!selectedBattle.claimed) {
            selectedBattle.claimed = true;
            battles[battleId] = selectedBattle;
            escrow.withdraw(
                selectedBattle.one.user,
                payable(selectedBattle.one.user),
                battleId
            );
            escrow.withdraw(
                selectedBattle.two.user,
                payable(selectedBattle.two.user),
                battleId
            );
        }
    }

    modifier battleExists(uint256 battleId) {
        require(battleId < nextBattleId, "Battle must exist!");
        _;
    }

    function getBattle(uint256 battleId)
        external
        view
        battleExists(battleId)
        returns (
            address,
            uint256,
            address,
            uint256,
            bool,
            bool,
            address,
            uint256,
            address,
            uint256,
            bool,
            bool,
            bool,
            bool
        )
    {
        Battle memory btl = battles[battleId];
        return (
            btl.one.user,
            uint256(btl.one.asset),
            btl.one.contractAddr,
            btl.one.amtOrTokenId,
            btl.one.isWinner,
            btl.one.hasWithdrawn,
            btl.two.user,
            uint256(btl.two.asset),
            btl.two.contractAddr,
            btl.two.amtOrTokenId,
            btl.two.isWinner,
            btl.two.hasWithdrawn,
            btl.claimed,
            btl.matched
        );
    }

    function initBattle(
        address challenging,
        bool nft,
        address contractAddr,
        uint256 amtOrTokenId
    ) external payable nonReentrant returns (uint256) {
        uint256 battleId = nextBattleId;
        nextBattleId++;

        AssetType _asset = AssetType.NULL;
        uint256 _amtOrTokenId;
        if (
            msg.value > 0 &&
            contractAddr == address(0) &&
            amtOrTokenId == 0 &&
            !nft
        ) {
            _asset = AssetType.ETH;
            _amtOrTokenId = msg.value;
        } else if (contractAddr != address(0) && amtOrTokenId != 0) {
            if (nft) {
                _asset = AssetType.NFT;
            } else {
                _asset = AssetType.TOKEN;
            }
            _amtOrTokenId = amtOrTokenId;
        }

        battles[battleId] = Battle({
            one: BattleParticipant({
                user: msg.sender,
                asset: _asset,
                contractAddr: contractAddr,
                amtOrTokenId: _amtOrTokenId,
                isWinner: false,
                hasWithdrawn: false
            }),
            two: BattleParticipant({
                user: challenging,
                asset: AssetType.NULL,
                contractAddr: address(0),
                amtOrTokenId: 0,
                isWinner: false,
                hasWithdrawn: false
            }),
            claimed: false,
            matched: false
        });

