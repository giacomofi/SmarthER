                    _asset = AssetType.TOKEN;
                }
                _amtOrTokenId = amtOrTokenId;
            }

            selectedBattle.matched = true;
            selectedBattle.two.asset = _asset;
            selectedBattle.two.contractAddr = contractAddr;
            selectedBattle.two.amtOrTokenId = _amtOrTokenId;
            battles[battleId] = selectedBattle;

            // transfer
            if (_asset == AssetType.ETH) {
                escrow.deposit{value: msg.value}(
                    msg.sender,
                    battleId,
                    false,
                    address(0),
                    0
                );
            } else if (_asset == AssetType.NFT) {
                ERC721 nftContract = ERC721(contractAddr);
                nftContract.safeTransferFrom(
                    msg.sender,
                    address(this),
                    amtOrTokenId
                );
                nftContract.approve(escrowAddr, amtOrTokenId);
                escrow.deposit(
                    msg.sender,
                    battleId,
                    true,
                    contractAddr,
                    amtOrTokenId
                );
            } else if (_asset == AssetType.TOKEN) {
                ERC20 stakeTokenC = ERC20(contractAddr);
                // transfers token to this contract,
                SafeTransferLib.safeTransferFrom(
                    stakeTokenC,
                    msg.sender,
                    address(this),
                    amtOrTokenId
                );
                // approves transfer to escrow
                SafeTransferLib.safeApprove(
                    stakeTokenC,
                    escrowAddr,
                    amtOrTokenId
                );
                escrow.deposit(
                    msg.sender,
                    battleId,
                    false,
                    contractAddr,
                    amtOrTokenId
                );
            } else if (_asset == AssetType.NULL) {
                // null type
                escrow.deposit(msg.sender, battleId, false, address(0), 0);
            }

            emit BattleJoined(
                battleId,
                selectedBattle.one.user,
                msg.sender,
                uint256(_asset),
                contractAddr,
                amtOrTokenId,
                msg.value
            );
        }
    }

    function claimProceeds(
        uint256 battleId,
        string memory message,
        bytes memory signature
    ) external payable battleExists(battleId) {
        if (msg.value < withdrawFee) {
            revert FeeTooLow();
        }

        if (battles[battleId].claimed) {
            revert BattleAlreadyClaimed();
        }

        bytes32 messagehash = keccak256(bytes(message));
        address signer = messagehash.toEthSignedMessageHash().recover(
            signature
        );
        if (signer != judge) {
            revert ForgedSignature();
        } else {
            Battle storage selectedBattle = battles[battleId];

            if (msg.sender == selectedBattle.one.user) {
                selectedBattle.one.isWinner = true;
            } else if (msg.sender == selectedBattle.two.user) {
                selectedBattle.two.isWinner = true;
            } else {
                revert ClaimFromNonParticipant();
            }
            selectedBattle.claimed = true;
            battles[battleId] = selectedBattle;

            emit BattleWon(battleId, msg.sender);

            escrow.withdraw(
                selectedBattle.one.user,
                payable(msg.sender),
                battleId
            );
            escrow.withdraw(
                selectedBattle.two.user,
                payable(msg.sender),
                battleId
            );
        }
    }

    function withdrawStake(
        uint256 battleId,
        string memory message,
        bytes memory signature
    ) external battleExists(battleId) {
        Battle storage selectedBattle = battles[battleId];

        if (selectedBattle.claimed) {
            revert BattleAlreadyClaimed();
        }

        if (selectedBattle.one.user == msg.sender) {
            if (selectedBattle.one.hasWithdrawn) {
                revert UserAlreadyWithdrawn();
            }
        } else if (selectedBattle.two.user == msg.sender) {
            if (selectedBattle.two.hasWithdrawn) {
                revert UserAlreadyWithdrawn();
            }
        } else {
            revert WithdrawFromNonParticipant();
        }

        bytes32 messagehash = keccak256(bytes(message));
        address signer = messagehash.toEthSignedMessageHash().recover(
            signature
        );
        if (signer != withdrawJudge) {
            revert ForgedWithdrawSignature();
        } else {
            selectedBattle.one.hasWithdrawn = true;
            selectedBattle.two.hasWithdrawn = true;
            battles[battleId] = selectedBattle;

            emit BattleCanceled(battleId, msg.sender);

            escrow.withdraw(
                selectedBattle.one.user,
                payable(selectedBattle.one.user),
                battleId
            );
            escrow.withdraw(
                selectedBattle.two.user,
                payable(selectedBattle.two.user),
                battleId
            );
        }
    }
