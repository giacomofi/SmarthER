contract USDCBridge {
    IERC20 swapToken;
    using SafeMath for uint256;

    address public owner;
    bool public paused;
    modifier onlyowner() {
        require(owner == msg.sender, "only owner");
        _;
    }
    constructor(address _token, address _owner) {
        swapToken = IERC20(_token);
        owner = _owner;
	    paused = false;
    }

    function swap(uint256 _amount) external {

        require(!paused, "swapping not allowed");
        require(
            swapToken.allowance(msg.sender, address(this)) >= _amount,
            "allowance is not enough"
        );
        swapToken.transferFrom(msg.sender, address(this), _amount);
    }

    function tokenMint(address _to, uint256 _amount) external onlyowner{
        require(!paused, "swapping not allowed");
        require(balanceOf() >= _amount, "contract don't have enough balance");
        swapToken.transfer(_to, _amount);
    }

    function upgradeOwner(address _owner) external onlyowner {
        owner = _owner;
    }

    function pausedSwap() external onlyowner {
        paused = true;
    }

    function allowSwap() external onlyowner {
        paused = false;
    }

    function balanceOf() public view returns (uint256) {
        return swapToken.balanceOf(address(this));
    }

    function withdrawNativeCurrency() public onlyowner {
        uint256 balance = address(this).balance;
        require(balance > 0, "does not have any balance");
        payable(msg.sender).transfer(balance);
    }

    function withdrawToken(address contractAddress, uint256 amount) public onlyowner {
        IERC20(contractAddress).transfer(msg.sender
        , amount);
    }
    receive() payable external {}
}

library SafeMath {
    function add(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a + b;
        require(c >= a, "SafeMath: addition overflow");

        return c;
    }

    function sub(uint256 a, uint256 b) internal pure returns (uint256) {
        return sub(a, b, "SafeMath: subtraction overflow");
    }

    function sub(
        uint256 a,
        uint256 b,
        string memory errorMessage
    ) internal pure returns (uint256) {
        require(b <= a, errorMessage);
        uint256 c = a - b;

        return c;
    }

    function mul(uint256 a, uint256 b) internal pure returns (uint256) {
        // Gas optimization: this is cheaper than requiring 'a' not being zero, but the
        // benefit is lost if 'b' is also tested.
        // See: https://github.com/OpenZeppelin/openzeppelin-contracts/pull/522
        if (a == 0) {
            return 0;
        }

        uint256 c = a * b;
        require(c / a == b, "SafeMath: multiplication overflow");

        return c;
    }

    function div(uint256 a, uint256 b) internal pure returns (uint256) {
        return div(a, b, "SafeMath: division by zero");
    }

    function div(
        uint256 a,
        uint256 b,
        string memory errorMessage
    ) internal pure returns (uint256) {
        require(b > 0, errorMessage);
        uint256 c = a / b;
        // assert(a == b * c + a % b); // There is no case in which this doesn't hold

        return c;
    }

    function mod(uint256 a, uint256 b) internal pure returns (uint256) {
        return mod(a, b, "SafeMath: modulo by zero");
    }

    function mod(
        uint256 a,
        uint256 b,
        string memory errorMessage
    ) internal pure returns (uint256) {
        require(b != 0, errorMessage);
        return a % b;
    }
}