    EnumerableSet.AddressSet set; 
    uint public _GGGRebate = 300; //鸭公返点
    uint public _GGGAmount; //鸭公获得的金额
    address public _sat; //代币地址
    uint public _totalCount;   //总私募人数
    uint public _totalAmount;   //总私募余额

    uint _startTime ;
    uint _endTime;
    uint _minAmount ;
    uint _maxAmount;
    uint public _tokenExchangeRate;
    address public _collectionAddr ;
    bool public _isRepeatBuy; // 开启重复购买
    address public _payTokenType;

    struct User {
        address partnerAddr; //上级地址
        address[] invitees; //下级地址
        uint256 claim; //可以解锁的空投数量
        uint256 amount; //购买了多少金额
        uint256 alreadyClaim;  //已经领取的空投数量
        bool isAir;  //是否参与过私募
        uint256 divdAmount;  //计算返现了多少
        uint256 buyTime; //购买时间
    }
    mapping(address => User) public  _users; //用户

      constructor(
     
        ){
         
            _startTime = 1685671200;
            _endTime = 1686585600;
            _minAmount = 325e6;
            _maxAmount = 8237e6;
            _tokenExchangeRate = 136462880000;
         
            if(block.chainid==1){
                _payTokenType = 0xdAC17F958D2ee523a2206206994597C13D831ec7;
                _startTime = 1685671200;
            // }else{
            //     _payTokenType = 0xD87Ba7A50B2E7E660f678A895E4B72E7CB4CCd9C;
            //     _startTime = block.timestamp;
            //     _sat = 0x89614e3d77C00710C8D87aD5cdace32fEd6177Bd;
            }

            _collectionAddr = 0xeC46aaCc09C2162DA639EeaDd5eb54Fb27f33958;
            _isRepeatBuy = true;
            _sat = 0xBE97a7dd556d256F93C82B7E1A6580c7a7d0Cf1b;
   
    }



  
  

    function setAmount(uint[] memory uinP) public onlyOwner{
        _minAmount = uinP[0];
        _maxAmount = uinP[1];
    }

    function setTime(uint[] memory uinP) public onlyOwner{
        _startTime = uinP[0];
        _endTime = uinP[1];
    }

    function setCollectionAddr(address  collectionAddr) public onlyOwner{
        _collectionAddr = collectionAddr;
    }

    function setIsRepeatBuy(bool  isRepeatBuy) public onlyOwner{
        _isRepeatBuy = isRepeatBuy;
    }


    function setTokenExchangeRate(uint  value) public onlyOwner{
        _tokenExchangeRate = value;
    }



    function invest(address inviter, uint256 amount) external payable  { // 代币支付
        check(amount);
       // getInviter(inviter);
        _takeInviter(amount);
        inviter;
        //推荐人所得
        set.add(msg.sender);
        _users[msg.sender].amount += amount;
        _totalAmount += amount;
        _users[msg.sender].claim += amount *_tokenExchangeRate;
        _users[msg.sender].isAir = true;
     
    }

    function check(uint256 amount) view private{
        require(block.timestamp < _endTime && block.timestamp >_startTime, "already stop");
        require(_minAmount <= amount && _maxAmount>= amount , "Please enter the correct amount");
      
    }

  
    function _takeInviter(uint256 amount)  private{
        uint rate = _GGGRebate ;
        if(_payTokenType ==address(0)){
            require(msg.value==amount,"not true amount" );
        }
        if(_GGGRebate!=0){
            dividend(_GGGAddr,(amount * _GGGRebate)/10000);
        }
        dividend(_collectionAddr,(amount * (10000 - rate))/10000 );
    }

   

    function claim() public {
        uint256 cl=getClaim(msg.sender);
        IERC20(_sat).transfer(msg.sender,(cl* 10** IERC20(_sat).decimals())/10000 );
        _users[msg.sender].alreadyClaim+=cl;
    }


    function getClaim(address user) public view returns(uint256 amount){
         if( ! _users[user].isAir ){
            return 0;
        }
        amount = (_users[user].claim)/1e6  -_users[user].alreadyClaim;
    }

    function dividend(address to ,uint256 amount) private{
        IERC20(_payTokenType).transferFrom(msg.sender,to, amount );
    }
 

    function setSat(address sat_) onlyOwner external {
         _sat = sat_;
    }

  

    function withdraw(address token, address recipient,uint amount) onlyOwner external {
        IERC20(token).transfer(recipient, amount);
    }

    function withdrawBNB() onlyOwner external {
        payable(owner()).transfer(address(this).balance);
    }



    function getUserInfo(address account) external view returns(
       User memory user
    ){
        return(_users[account]);
    }
}