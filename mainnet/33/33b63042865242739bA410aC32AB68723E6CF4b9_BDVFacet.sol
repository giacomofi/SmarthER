        uint256 bean3CrvPrice = LibMetaCurve.price(BEAN_METAPOOL, BEAN_DECIMALS);
        uint256 token3CrvPrice = LibMetaCurve.price(TOKEN_METAPOOL, TOKEN_DECIMALS);
        rate = token3CrvPrice.mul(I_BEAN_RM).div(
            bean3CrvPrice
        );
    }
}

