        _maxTxAmount = maxTxAmount * 10**_decimals;
    }

    function setMaxWalletHoldingAmount(uint256 maxWalletHolding)
        external
        onlyOwner
    {
        require(maxWalletHolding > 5000000000000);
        _maxWalletHoldingAmount = maxWalletHolding * 10**_decimals;
    }

