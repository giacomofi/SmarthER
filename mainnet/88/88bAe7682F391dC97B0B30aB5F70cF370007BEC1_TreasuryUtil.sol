    // To receive ETH when swapping
    receive() external payable {}

    event DepositFeeConvertedToRC(address indexed inputToken, uint256 inputAmount);
    event SetDistributionRate(uint256 distributionRate);

    constructor() {

        if (block.chainid == 56) {
            routerAddress = address(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        } else if (block.chainid == 97) {
            routerAddress = address(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
        } else if (block.chainid == 1 || block.chainid == 4) {
            routerAddress = address(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        } else if (block.chainid == 43114) {
            routerAddress = address(0x60aE616a2155Ee3d9A68541Ba4544862310933d4);
        } else if (block.chainid == 250) {
            routerAddress = address(0xF491e7B69E4244ad4002BC14e878a34207E38c29);
        }

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(DEFAULT_ADMIN_ROLE, address(0xFBf335f8224a102e22abE78D78CC52dc95e074Fa)); // Treasury
        _setupRole(DEFAULT_ADMIN_ROLE, address(0xFe3E77699aCd0970EAA0c8f439Ce84D6b1D12baF)); // Development

        _setupRole(OPERATOR_ROLE, _msgSender());

        WETH = IUniswapV2Router02(routerAddress).WETH();
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    function add(address _Token, uint16 _tokenType) external onlyRole(DEFAULT_ADMIN_ROLE) {
        // EDIT: Don't add same pool twice, fixed in code with check
        require(poolIsAdded[address(_Token)] == false, 'add: pool already added');
        poolIsAdded[address(_Token)] = true;

        poolInfo.push(PoolInfo({
            token: _Token,
            tokenType: _tokenType,
            enabled: true
        }));
    }

    function set(uint256 _pid, uint16 _tokenType, bool _enabled) external onlyRole(DEFAULT_ADMIN_ROLE) {
        poolInfo[_pid].tokenType = _tokenType;
        poolInfo[_pid].enabled = _enabled;
    }

    /// External functions ///
    function setDistributionRate(uint256 newDistributionRate) external onlyRole(DEFAULT_ADMIN_ROLE) {
        distributionRate = newDistributionRate;

        emit SetDistributionRate(distributionRate);
    }

    function emergencyWithDrawToken(address token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 balanceToken = IERC20(address(token)).balanceOf(address(this));
        if (balanceToken > 0)
            IERC20(address(token)).safeTransfer(msg.sender, balanceToken);
    }

    function withdrawETH() external onlyRole(DEFAULT_ADMIN_ROLE) {
        (bool s,) = payable(msg.sender).call{value: address(this).balance}("");
        require(s);
    }

    /// Public functions ///

    // Harvest Reflections for All Enabled Pools 
    function massHarvestReflections() public nonReentrant {
        uint256 length = poolInfo.length;
        PoolInfo storage pool;

        for (uint256 pid = 0; pid < length; ++pid) {
            pool = poolInfo[pid];
            if (pool.enabled == true)
            {
                convertReflectionsToRC(pool.token, pool.tokenType);
            }
        }
    }

    /// Sell all of a current type of token.
    function convertReflectionsToRC(address token, uint16 tokenType) public {
        uint256 amount = IERC20(token).balanceOf(address(this));

        if (amount == 0)
            return;

        if (tokenType == 1) {
            (address token0, address token1) = _removeLiquidity(token, amount);
            convertReflectionsToRC(token0, 0);
            convertReflectionsToRC(token1, 0);
            return;
        }

        uint256 holdingLiquidity = (amount * distributionRate) / 10000;
        uint256 holdingOwnership = amount - holdingLiquidity;

        uint256 wNativeBalanceBefore;
        uint256 usdBalanceBefore;

        if (token != WETH) {
            wNativeBalanceBefore = IERC20(WETH).balanceOf(address(this));
            _swapTokensForTokens(token, WETH, holdingLiquidity);
        }

        if (token != RCtoken) {
            usdBalanceBefore = IERC20(RCtoken).balanceOf(address(this));
            _swapTokensForTokens(token, RCtoken, holdingOwnership);
        }

        uint256 wnativeAmount = IERC20(WETH).balanceOf(address(this)) - wNativeBalanceBefore;
        uint256 usdAmount = IERC20(RCtoken).balanceOf(address(this)) - usdBalanceBefore;

        if (wnativeAmount > 0)
            IERC20(WETH).safeTransfer(treasuryLiquidityAddress, wnativeAmount);

        if (usdAmount > 0)
            IERC20(RCtoken).safeTransfer(burnAddress, usdAmount);

        emit DepositFeeConvertedToRC(token, amount);
    }

    /// Internal functions ///
    function _swapTokensForTokens(address from, address to, uint256 amount) internal {
        address[] memory path = new address[](from == WETH || to == WETH ? 2 : 3);
        if (from == WETH || to == WETH) {
            path[0] = from;
            path[1] = to;
        } else {
            path[0] = from;
            path[1] = WETH;
            path[2] = to;
        }

        require(IERC20(from).approve(routerAddress, amount), "E1");

        uint256 deadline = block.timestamp + 300;

        IUniswapV2Router02(routerAddress).swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0, // accept any amount of USD
            path,
            address(this),
            deadline
        );
    }

    function _removeLiquidity(address token, uint256 tokenAmount) internal returns(address, address) {
        require(IERC20(token).approve(routerAddress, tokenAmount), "E1");

        IUniswapV2Pair lpToken = IUniswapV2Pair(token);

        address token0 = lpToken.token0();
        address token1 = lpToken.token1();

        uint256 deadline = block.timestamp + 300;

        IUniswapV2Router02(routerAddress).removeLiquidity(
            token0,
            token1,
            tokenAmount,
            0,
            0,
            address(this),
            deadline
        );

        return (token0, token1);
    }
}