    bool public useBaseURIOnly = true;

    error TransferOfTokenThatIsNotOwn();
    error InconsistentArrayLengths(uint array1, uint array2);
    error AddressIsZero();

    constructor(string memory name, string memory symbol)
        ERC721Min(name, symbol)
    {}

