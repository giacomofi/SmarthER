                    keccak256("whitelisted(address seller,address buyer,address nftAddress,bool inEth,uint256 amount,uint256 tokenId,uint256 qty,uint256 timestamp)"),
                    list.seller,
                    list.buyer,
                    list.nftAddress,
                    list.inEth,
                    list.amount,
