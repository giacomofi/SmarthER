        uint qty;
        uint timestamp;
        bytes signature;
        
    }

    constructor() EIP712(SIGNING_DOMAIN, SIGNATURE_VERSION){}


    function getSigner(whitelisted memory list) public view returns(address){
        return _verify(list);
    }


