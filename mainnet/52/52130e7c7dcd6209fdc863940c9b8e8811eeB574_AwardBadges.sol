contract AwardBadges  {
  using SafeMath for uint;  
  
  mineIF DCFmine = mineIF(0x90544049d50c012caF6F5F1C10344b7A9c05A064);
  IERC20 dcoff =  IERC20(0xC74Ab3FF349cE64a349854BcD5dc2D542371350F);
  IERC1155 badges = IERC1155(0x73b8CeB6D96202c37D2d168931D3e4D4F33e8c7D);
  MintBadge mintbadge_ = MintBadge(0x73b8CeB6D96202c37D2d168931D3e4D4F33e8c7D);
  



  function AwardBadge (uint256 id)external{
    if(id == 1){
      mintbadge_.Mint(msg.sender,1,1);
    }else if(id == 2){
      require(dcoff.balanceOf(msg.sender) >= 5000e18);
      mintbadge_.Mint(msg.sender,2,1);
    }else if(id == 4){
      require(DCFmine.mineInfo(msg.sender,2) >= 20);
      mintbadge_.Mint(msg.sender,4,1);
    }else if(id == 5){
      require(badges.balanceOf(msg.sender,1)>=1);
      require(badges.balanceOf(msg.sender,2)>=1);
      require(badges.balanceOf(msg.sender,3)>=1);
      require(badges.balanceOf(msg.sender,4)>=1);     
      mintbadge_.Mint(msg.sender,5,1);
    }else if(id >5 || id == 3){
      revert("nothing");
    }
      
  } 


 


   
  

