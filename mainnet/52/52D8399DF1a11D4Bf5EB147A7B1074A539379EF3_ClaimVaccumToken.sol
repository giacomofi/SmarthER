contract ClaimVaccumToken is Ownable {
    IERC20 public token = IERC20(0x63beaAcA3d091A22bE92b6DF7ABf58223d6d5e76);
    
    mapping(address => uint256) balance;

    function addBalance(address[] calldata accounts, uint256[] calldata amounts) public onlyOwner{
        require(accounts.length == amounts.length, "Data not matched.");

        for (uint256 i = 0; i < accounts.length; i++) {
            balance[accounts[i]] += amounts[i];
        }
    }

    function claim() external {
        uint256 amount = balance[msg.sender];
        require(amount > 0, "No tokens for claim");
        require(token.transfer(msg.sender, amount), "Token claim failed");
        balance[msg.sender] = 0;
    }
}