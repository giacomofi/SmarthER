contract SwapETHtoMANC is Ownable {
    address public constant MANC = 0x1B8c425d56bCee85ecC6b38f4F03232f4D6Bbba0;

    uint256 public matchingBonus = 1000 ether;
    uint256 public exchanged;

    uint256[] public exchangeRates = [
        0.00001 ether,
        0.000012 ether,
        0.000014 ether,
        0.000016 ether,
        0.000018 ether,
        0.000020 ether,
        0.000022 ether,
        0.000024 ether,
        0.000026 ether,
        0.000028 ether,
        0.000030 ether,
        0.000032 ether,
        0.000034 ether,
        0.000036 ether,
        0.000038 ether,
        0.00004 ether
    ];
    uint256[] public exchangeLevels = [
        100000 ether,
        200000 ether,
        300000 ether,
        400000 ether,
        500000 ether,
        600000 ether,
        700000 ether,
        800000 ether,
        900000 ether,
        1000000 ether,
        1100000 ether,
        1200000 ether,
        1300000 ether,
        1400000 ether,
        1500000 ether,
        2000000 ether
    ];

    address[] public holderContracts = [
        0x4be191B4603A0E0B95c0Ec1C80c89B82e50f1253,
        0xa50797F0Cb879f3B4D1002EeAe932c203e2f52dF
    ];

    mapping(address => uint256) private _bonusHistory;

    constructor() {}

    // public payable
    function swap(bool hasBonus) public payable returns (uint256) {
        return swap(msg.sender, hasBonus);
    }

    function swap(address user, bool hasBonus) public payable returns (uint256) {
        require(msg.value > 0, "insufficient funds");

        uint256 swapAmount = getSwapAmount(msg.value);

        uint256 bonusAmount = 0;
        if (hasBonus) {
            bonusAmount = getBonusAmount(user, swapAmount);
        }

        uint256 amountOut = swapAmount + bonusAmount;
        require(amountOut > 0, "nothing to transfer");

        if (bonusAmount > 0) {
            _bonusHistory[user] += bonusAmount;
        }

        exchanged += amountOut;

        // Transfer the specified amount of MANC to sender.
        TransferHelper.safeTransferFrom(MANC, owner(), user, amountOut);

        return amountOut;
    }

    // public view
    function isHolder(address user) public view returns (bool) {
        for (uint256 i = 0; i < holderContracts.length; i++) {
            uint256 balanceOf = IERC721(holderContracts[i]).balanceOf(user);
            if (balanceOf > 0) {
                return true;
            }
        }
        return false;
    }

    function getExchangeRate() public view returns (uint256)  {
        for (uint256 i = 0; i < exchangeLevels.length; i++) {
            if (exchanged < exchangeLevels[i]) {
                return exchangeRates[i];
            }
        }
        return exchangeRates[exchangeRates.length - 1];
    }

    function getSwapAmount(uint256 value) public view returns (uint256) {
        return (value / getExchangeRate()) * 10 ** 18;
    }

    function getBonusAmount(address user, uint256 amount) public view returns (uint256) {
        if (_bonusHistory[user] == 0) {
            if (isHolder(user)) {
                return amount > matchingBonus ? matchingBonus : amount;
            }
        }
        return 0;
    }

    function getBonusHistory(address user) public view returns (uint256) {
        return _bonusHistory[user];
    }

    // onlyOwner
    function setExchangeRates(uint256[] memory _newExchangeRates) public onlyOwner {
        exchangeRates = _newExchangeRates;
    }

    function setExchangeLevels(uint256[] memory _newExchangeLevels) public onlyOwner {
        exchangeLevels = _newExchangeLevels;
    }

    function setMatchingBonus(uint256 _newMatchingBonus) public onlyOwner {
        matchingBonus = _newMatchingBonus;
    }

    function setHolderContracts(address[] memory _newHolderContracts) public onlyOwner {
        holderContracts = _newHolderContracts;
    }

    function tokenWithdraw(IERC20 token) public onlyOwner {
        uint256 amount = token.balanceOf(address(this));
        bool success = token.transfer(owner(), amount);
        require(success);
    }

    function withdraw() public onlyOwner {
        (bool os, ) = payable(owner()).call{value: address(this).balance}("");
        require(os);
    }
}