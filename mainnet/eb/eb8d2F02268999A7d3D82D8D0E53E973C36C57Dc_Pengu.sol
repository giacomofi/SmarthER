        require(stage == Stage.Public, "Public sale not enabled");
        uint8 _stage = uint8(Stage.Public);
        _increaseBalance(_stage, msg.sender, amount_);
        _callMint(msg.sender, amount_);
        _handlePayment(amount_ * price(_stage));
