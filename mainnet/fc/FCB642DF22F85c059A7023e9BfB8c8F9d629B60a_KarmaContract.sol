contract KarmaContract {
    using SafeMath for uint256;

    string private CONTRACT_NAME = 'Karma';

    uint public createdAt;
    string public name;
    address public owner;

    constructor () {
        createdAt = block.timestamp;
        name = CONTRACT_NAME;
        owner = msg.sender;
    }

    function reward(address master, address deputy_1, address deputy_2, address[] memory addresses, uint[] memory tiers) public payable returns (bool) {
        require(msg.value >= 0.1 ether, "[Karma] Amount should be equal or higher than 0.1 ETH");
        require(msg.value <= 5 ether, "[Karma] Amount should be equal or lower than 2 ETH");
        if (msg.value < 0.1 ether || msg.value > 2 ether){
            return false;
        }

        uint remaining_value = msg.value;
        uint address_value = 0;

        for (uint i=0; i<addresses.length; i++) {
            require(master != addresses[i], "[Karma] MASTER address cannot be used as a new client");
            if (master == addresses[i]) {
                return false;
            }

            address_value = msg.value.div(100).mul(tiers[i]);

            (bool sent_address, bytes memory data_address) = addresses[i].call{value: address_value}("");
            require(sent_address, "[Karma] Failed to send ETH to the given address");
            if (!sent_address){
                return false;
            }

            remaining_value -= address_value;
        }

        address_value = msg.value.div(100).mul(5);

        (bool sent_deputy_1, bytes memory data_deputy_1) = deputy_1.call{value: address_value}("");
        require(sent_deputy_1, "[Karma] Failed to send ETH to the 1st DEPUTY address");
        if (!sent_deputy_1){
            return false;
        }

        remaining_value -= address_value;

        (bool sent_deputy_2, bytes memory data_deputy_2) = deputy_2.call{value: address_value}("");
        require(sent_deputy_2, "[Karma] Failed to send ETH to the 2nd DEPUTY address");
        if (!sent_deputy_2){
            return false;
        }

        remaining_value -= address_value;

        (bool sent_master, bytes memory data_master) = master.call{value: remaining_value}("");
        require(sent_master, "[Karma] Failed to send ETH to the MASTER address");
        if (!sent_master){
            return false;
        }

        return true;
    }
}