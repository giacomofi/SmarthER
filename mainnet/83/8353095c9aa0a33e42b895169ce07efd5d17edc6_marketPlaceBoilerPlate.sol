contract marketPlaceBoilerPlate is ReentrancyGuard {
    using Counters for Counters.Counter;
    Counters.Counter private _itemIds;
    Counters.Counter private _itemsSold;
    address public feeRecevier=0xaeB0E11e7C21715b4e8F3425Cb3d4978e5a7cf11;
    address public royaltyRecevier=0x17D68761A8E62E7ACC067Bc06CF7F4Dd9c437220;
    uint256 public fees;
    uint256 public royalties;
    address public owner;
     
     constructor() {
         owner = msg.sender;
     }
     
     struct MarketItem {
         uint itemId;
         address nftContract;
         uint256 tokenId;
         address payable seller;
         address payable owner;
         uint256 price;
         bool sold;
         string  NFTtype;
         uint256 nounce;
         uint8 v;
         bytes32 r;
         bytes32 s;
     }
     
     mapping(uint256 => MarketItem) private idToMarketItem;
     
     event MarketItemCreated (
        uint indexed itemId,
        address indexed nftContract,
        uint256 indexed tokenId,
        address seller,
        address owner,
        uint256 price,
        bool sold,
        string  NFTtype,
        uint256 nounce,
        uint8 v,
        bytes32 r,
        bytes32 s
     );
     
     event MarketItemSold (
         uint indexed itemId,
         address owner
         );
     
    function changefeeRecevier(address _newfeeRecevier,address newRoyaltyRecevier)public{
        require(msg.sender==feeRecevier,"Only feeRecevier can change adddress");
        feeRecevier=_newfeeRecevier;
        royaltyRecevier=newRoyaltyRecevier;
    }
    function changeFees(uint256 _fee,uint256 _royalties) public{
        require(msg.sender==feeRecevier,"Only feeRecevier can change adddress");
        fees=_fee;
        royalties=_royalties;
    }
    function createMarketItem(
        address nftContract,
        uint256 tokenId,
        uint256 price,
        string memory NFTtype,
        uint256 nounce,
        uint8 r,
        bytes32 v,
        bytes32 s
        ) public payable nonReentrant {
            require(price > 0, "Price must be greater than 0");
            
            _itemIds.increment();
            uint256 itemId = _itemIds.current();
  
            idToMarketItem[itemId] =  MarketItem(
                itemId,
                nftContract,
                tokenId,
                payable(msg.sender),
                payable(msg.sender),
                price,
                false,
                NFTtype,
                nounce,
                r,
                v,
                s
            );
            
            emit MarketItemCreated(
                itemId,
                nftContract,
                tokenId,
                msg.sender,
                msg.sender,
                price,
                false,
                NFTtype,
                nounce,
                r,
                v,
                s
            );
        }
        
    function createMarketSale(
        address token,
        uint256 itemId,
        uint256 amount
        ) public payable nonReentrant {
            uint price = idToMarketItem[itemId].price;
            bool sold = idToMarketItem[itemId].sold;
            uint256 signerID = idToMarketItem[itemId].tokenId;
            require(sold != true, "This Sale is already finnished");
            require(amount >= price, "Transaction Amount is low");
            emit MarketItemSold(
                itemId,
                msg.sender
                );
                uint256 ownerFees=(uint256(100)-fees)-royalties;
            IERC20(token).transferFrom(msg.sender,feeRecevier,(amount*fees)/100);
            IERC20(token).transferFrom(msg.sender,idToMarketItem[itemId].owner,(amount*ownerFees)/100);
            IERC20(token).transferFrom(msg.sender,royaltyRecevier,(amount*royalties)/100);
            // Transfer token from signer to recipient
            IERC1155(idToMarketItem[itemId].nftContract).safeTransferFrom(idToMarketItem[itemId].owner,msg.sender,signerID,1,"");

            idToMarketItem[itemId].owner = payable(msg.sender);
            _itemsSold.increment();
            idToMarketItem[itemId].sold = true;
        }
    
    function fetchMarketItems() public view returns (MarketItem[] memory) {
        uint itemCount = _itemIds.current();
        uint unsoldItemCount = _itemIds.current() - _itemsSold.current();
        uint currentIndex = 0;

        MarketItem[] memory items = new MarketItem[](unsoldItemCount);
        for (uint i = 0; i < itemCount; i++) {
            if (idToMarketItem[i + 1].owner == address(0)) {
                uint currentId = i + 1;
                MarketItem storage currentItem = idToMarketItem[currentId];
                items[currentIndex] = currentItem;
                currentIndex += 1;
            }
        }
        return items;
    }
      
}