    // Function to withdraw ETH from the contract
    function withdrawETH() external onlyOwner {
        // Prevents the owner from withdrawing ETH while the presale is live
        require(!isPresaleLive, "Presale is live.");
        payable(owner()).transfer(address(this).balance);
    }

    // Function to withdraw Tether from the contract
    function withdrawTether() external onlyOwner {
        // Prevents the owner from withdrawing Tether while the presale is live
        require(!isPresaleLive, "Presale is live.");
        uint256 tetherBalance = tether.balanceOf(address(this));
        tether.transfer(owner(), tetherBalance);
    }

    // Function to get the remaining tokens in the contract
    function getRemainingTokens() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    // Function to get the remaining tether in the contract
    function getRemainingTether() public view returns (uint256) {
        return tether.balanceOf(address(this));
    }

    // Function to get the remaining ETH in the contract
    function getRemainingETH() public view returns (uint256) {
        return address(this).balance;
    }

    // Function to get token price in ETH
    function getTokenPrice(uint256 amount) public view returns (uint256) {
        return amount / rate;
    }

    // Function to get amount of tokens for a given amount of ETH
    function getTokensForETH(uint256 amount) public view returns (uint256) {
        return amount * rate;
    }

    // Function to get token price in Tether
    function getTokenPriceInTether(uint256 amount) public view returns (uint256) {
        // Tether has only 6 decimals
        return (amount / tetherRate) / 10 ** 12;
    }

    // Function to get amount of tokens for a given amount of Tether
    function getTokensForTether(uint256 amount) public view returns (uint256) {
        // Tether has only 6 decimals
        return (amount * tetherRate) * 10 ** 12;
    }

    // Function to get total tokens sold
    function getTotalTokensSold() public view returns (uint256) {
        return totalTokensSold;
    }

    // Fallback function to accept ETH
    receive() external payable {
        purchaseTokens();
    }
}