        require(block.timestamp >= startTime, "Presale has not started yet.");
        require(block.timestamp <= endTime, "Presale has ended.");

        uint256 tokens = amount * tetherRate * 10 ** 12;

        require(tokens >= minPurchase, "Purchase amount is less than minimum purchase.");
        require(tokens <= maxPurchase, "Purchase amount is more than maximum purchase.");

