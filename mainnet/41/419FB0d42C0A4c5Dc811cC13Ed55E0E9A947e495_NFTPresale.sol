contract NFTPresale is Ownable {
    using SafeMath for uint256;
    IERC721 public nft;

    bool public isPresaleEnabled;

    address public daoWallet;
    address public salesWallet;
    address public rewardDistributor;

    uint256 public daoFee;
    uint256 public nftPrice;
    uint256 public totalSupply;
    uint256 public totalMintedNfts;

    mapping(address => uint256) public userMinted;
    mapping(address => bool) public approvePayments;

    constructor(
        IERC721 _nft,
        address[] memory _methods,
        uint256 _nftPrice,
        uint256 _totalSupply,
        address _daoWallet,
        address _salesWallet
    ) {
        nft = _nft;
        nftPrice = _nftPrice;
        totalSupply = _totalSupply;

        for (uint256 i = 0; i < _methods.length; i++) {
            approvePayments[_methods[i]] = true;
        }
        isPresaleEnabled = true;
        daoFee = 100;

        daoWallet = _daoWallet;
        salesWallet = _salesWallet;
    }

    function buy(
        uint256 noOfNfts,
        address recipient,
        string[] memory _uri,
        address _payment
    ) external {
        require(approvePayments[_payment], "Payment method not approved");
        require(isPresaleEnabled, "Presale not enabled");
        require(totalSupply >= totalMintedNfts + noOfNfts, "NFT supply exceeded");
        require(_uri.length == noOfNfts, "No of NFTs and URIs mismatch");

        IERC20 _token = IERC20(_payment);
        uint256 _totalCost = noOfNfts.mul(nftPrice.mul(10**_token.decimals()).div(1e18));
        _token.transferFrom(msg.sender, daoWallet, _totalCost.mul(daoFee).div(1000));
        _token.transferFrom(msg.sender, salesWallet, _totalCost.mul(1000 - daoFee).div(1000));
        for (uint256 i = 0; i < noOfNfts; i++) {
            uint256 mintedID = nft.safeMint(recipient, _uri[i]);
            if (rewardDistributor != address(0)) {
                IRewardDistributor(rewardDistributor).setNFTMintTime(mintedID, block.timestamp);
            }
        }

        totalMintedNfts += noOfNfts;
        userMinted[msg.sender] += noOfNfts;
    }

    // ================================ Owner Functions ================================

    function updatePresaleStatus(bool _status) external onlyOwner {
        isPresaleEnabled = _status;
    }

    function removeStuckTokens(address _token, uint256 _amount) external onlyOwner {
        IERC20(_token).transfer(owner(), _amount);
    }

    function removeStuckFunds(uint256 _amount) external onlyOwner {
        payable(owner()).transfer(_amount);
    }

    function updateNftPrice(uint256 _nftPrice) external onlyOwner {
        nftPrice = _nftPrice;
    }

    function updateDaoWallet(address _addr) external onlyOwner {
        daoWallet = _addr;
    }

    function updateSalesWallet(address _addr) external onlyOwner {
        salesWallet = _addr;
    }

    function setDAOFee(uint256 _fee) external onlyOwner {
        daoFee = _fee;
    }

    function updateTotalSupply(uint256 _totalSupply) external onlyOwner {
        totalSupply = _totalSupply;
    }

    function addNewPayment(address[] memory _methods) external onlyOwner {
        for (uint256 i = 0; i < _methods.length; i++) {
            approvePayments[_methods[i]] = true;
        }
    }

    function removePaymentMethods(address[] memory _methods) external onlyOwner {
        for (uint256 i = 0; i < _methods.length; i++) {
            approvePayments[_methods[i]] = false;
        }
    }

    function updateNFTAddress(IERC721 _nft) external onlyOwner {
        nft = _nft;
    }

    function updateRewardDistributorAddress(address _distributor) external onlyOwner {
        rewardDistributor = _distributor;
    }
}

